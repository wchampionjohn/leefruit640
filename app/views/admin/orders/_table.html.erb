<div class="table-scrollable">
  <table class="table table-hover">
    <tr>
      <th>訂購人</th>
      <th>狀態</th>
      <th>商品數量</th>
      <th>總計</th>
      <th>成立時間</th>
      <th style="text-align:center">操作</th>
    </tr>
    <% current_collection.each do |order| %>
    <tr>
      <td>
        <%= order.user.name %>
      </td>
      <td>
        <%= t order.state %>
      </td>
      <td>
        <%= order.total_product %>
      </td>
      <td>
        <%= order.total_price %>
      </td>
      <td>
        <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
      </td>
      <td class="ui-helper-center">
        <%= link_to(edit_admin_order_path(order), class: 'btn btn-default btn-xs') do %>
        <i class="fa fa-pencil"></i>
        <% end %>
        <%= link_to(admin_order_path(order),  method: :delete, class: 'btn btn-default btn-xs', data: { "confirm-swal" =>  '確定刪除嗎 ?' }) do %>
        <i class="fa fa-trash"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
