<div class="table-scrollable">
  <table class="table table-hover">
    <tr>
      <th>商品</th>
      <th>價格</th>
      <th>建立時間</th>
      <th>修改時間</th>
      <th style="text-align:center">操作</th>
    </tr>
    <% current_collection.each do |product| %>
    <tr>
      <td>
        <%= product.name %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%= product.created_at.strftime("%Y-%m-%d %H:%M") %>
      </td>
      <td>
        <%= product.updated_at.strftime("%Y-%m-%d %H:%M") %>
      </td>
      <td class="ui-helper-center">
        <%= link_to(edit_admin_product_path(product), class: 'btn btn-default btn-xs') do %>
        <i class="fa fa-pencil"></i>
        <% end %>
        <%= link_to(admin_product_path(product),  method: :delete, class: 'btn btn-default btn-xs', data: { "confirm-swal" =>  '確定刪除嗎 ?' }) do %>
        <i class="fa fa-trash"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
