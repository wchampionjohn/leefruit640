<div class="page-bar">
  <%= breadcrumb(link_to('商品', admin_products_path), link_to(@product.name, edit_admin_product_path(@product)), '新增商品規格') %>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h2 class="page-header">
        <%= @product.name %>
      </h2>
      <div class="portlet box blue">
        <div class="portlet-title">
          <div class="caption">
            修改規格
          </div>
        </div>
        <div class="portlet-body form">
          <%= render partial: 'form', locals: { url: admin_product_spec_path(@product.id, current_object) } %>
        </div>
      </div>
    </div>
  </div>
</div>
